%header
  .navbar-fixed-top
    .jumbotron
      %span
      - flash.each do |name, msg|
        = msg
      .pull-right
        - if signed_in?
          %span

            Welcome, #{link_to current_user.first_name, user_path(current_user)}.
            = link_to edit_user_registration_path(current_user) do
              %span.glyphicon.glyphicon-cog
            = button_to "Sign Out", destroy_user_session_path, :method => :delete, class: "signout"
        - else
          .sign_in
          = button_to "Sign In", new_user_session_path, class: "signin"
          = button_to "Sign Up", new_user_registration_path, :method => :get, class: "signup"
      .text-center
        %ul

          %a{:href => '/'}
            %li.life LIFE
            %li.better better

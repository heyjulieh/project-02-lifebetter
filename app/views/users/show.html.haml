-# Navbar Start
.container-fluid
  .row.profile
    .col-sm-3.col-md-3.col-lg-3
      .profile-sidebar
        -# User Pic
        .profile-userpic
          %a{:href => user_path}
            = image_tag @user.avatar.url, class: "img-responsive" #size: "150x100" or (:medium)

        -# Menu
        .profile-usermenu
          %ul.nav.add_tip
            = link_to "Add New Tip", new_user_tip_path
          %ul.nav
            %li
              %a{:href => "/genres/beauty"}
                Beauty
            %li
              %a{:href => "/genres/health"}
                Fitness/Health
            %li
              %a{:href => "/genres/food"}
                Food
            %li
              %a{:href => "/genres/home"}
                Home/Living
            %li
              %a{:href => "/genres/travel"}
                Travel
    .col-sm-9.col-md-9.col-lg-9.tipsdiv
      - if current_user == @user
        %h1 TIPS by YOU!
      - else
        %h1
          TIPS by #{@user.username}
      - @tips.each do |tip|
        .container-fluid.tips
          .row
            .col-sm-12.col-md-12.col-lg-12
              .usertip-title
                %h3
                  = tip.title
                .container-fluid.content
                  = tip.content
                  .pull-right
                    = image_tag tip.avatar.url, height:"190px"
                .pull-left
                  = tip.genre
                  - if current_user == @user
                    = link_to delete_user_tip_path(@user.id, tip.id), data: { confirm: "Are you sure you want to delete this tip?" }, method: :delete do
                      %span.glyphicon.glyphicon-remove
                    = link_to edit_user_tip_path(@user.id, tip.id) do
                      %span.glyphicon.glyphicon-pencil
                .pull-right
                  = tip.created_at.strftime("%a, %b %d, %Y @ %l:%M %p")
